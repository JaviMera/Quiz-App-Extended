<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/submitColorPressed</item>
    </style>

    <!-- Custom Text Views -->
    <style name="TextViewBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="CorrectTextView" parent="TextViewBase">
        <item name="android:textColor">@color/correctAnswerColor</item>
        <item name="android:layout_marginBottom">@dimen/score_text_view_margin</item>
        <item name="android:layout_marginRight">@dimen/score_text_view_margin</item>
    </style>

    <style name="AttemptsTextView" parent="TextViewBase">
        <item name="android:textColor">@color/attemptsColor</item>
        <item name="android:layout_marginBottom">@dimen/score_text_view_margin</item>
        <item name="android:layout_marginRight">@dimen/score_text_view_margin</item>
    </style>

    <style name="QuestionTextView" parent="TextViewBase">
        <item name="android:textColor">@color/questionColor</item>
        <item name="android:layout_marginTop">@dimen/question_text_view_margin</item>
        <item name="android:layout_marginBottom">@dimen/question_text_view_margin</item>
        <item name="android:textSize">25sp</item>
    </style>

    <!-- Custom Answer Buttons -->
    <style name="ButtonBase">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ButtonAnswerView" parent="ButtonBase">
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/selector_answer_button_background</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/button_answer_view_margin</item>
        <item name="android:onClick">onButtonAnswerListener</item>
    </style>

    <style name="ButtonSubmit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/submitTextColor</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:layout_marginBottom">20dp</item>

    </style>

</resources>